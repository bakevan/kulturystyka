<h1>Spis artykułów</h1>
<%= link_to new_article_path, class: 'btn btn-info' do %>
  <i class="glyphicon glyphicon-plus"></i>Dodaj artykuł
<% end %>
<table class="table">
  <tr>
    <th>Nazwa</th>
    <th>Tekst</th>
    <th colspan="3"></th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article) , class: 'btn btn-primary btn-xs'%></td>
      <td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-success btn-xs' %></td>
      <td><%= link_to 'Destroy', article_path(article), class: 'btn btn-danger btn-xs',
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
